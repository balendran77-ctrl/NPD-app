<!DOCTYPE html>
<html>
<head>
    <title>Admin User Management</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body { font-family: Arial, sans-serif; background: #f9f9f9; margin: 0; padding: 0; }
        h2 { text-align: center; margin-top: 20px; }
        table { width: 100%; border-collapse: collapse; margin: 20px 0; }
        th, td { border: 1px solid #ccc; padding: 8px; text-align: left; }
        th { background: #eee; }
        form { margin: 20px auto; max-width: 400px; background: #fff; padding: 20px; border-radius: 8px; box-shadow: 0 2px 6px rgba(0,0,0,0.07); }
        label, input, button { display: block; width: 100%; margin-top: 10px; }
        input { padding: 8px; border-radius: 4px; border: 1px solid #ccc; }
        button { background: #007bff; color: #fff; border: none; border-radius: 4px; padding: 10px; font-size: 1rem; margin-top: 20px; }
        .danger { background: #dc3545; color: #fff; }
        @media (max-width: 600px) {
            form, table { width: 100%; font-size: 0.95rem; }
            h2 { font-size: 1.3rem; }
        }
    </style>
</head>
<body>
    <a href="/" style="position: absolute; top: 18px; right: 24px; color: #007bff; text-decoration: none; font-weight: bold; font-size: 1.1rem;">Home</a>
    <h2>Admin User Management</h2>
    <form method="post" action="/admin/create-user">
        <label>Username:</label>
        <input type="text" name="username" required>
        <label>Password:</label>
        <input type="password" name="password" required>
        <label>Is Admin:</label>
        <select name="isAdmin">
            <option value="false">No</option>
            <option value="true">Yes</option>
        </select>
        <button type="submit">Create User</button>
    </form>
    <h3>Existing Users</h3>
    <table>
        <thead>
            <tr><th>Username</th><th>Admin</th><th>Actions</th></tr>
        </thead>
        <tbody>
            <% users.forEach(function(user) { %>
                <tr>
                    <td><%= user.username %></td>
                    <td><%= user.isAdmin ? 'Yes' : 'No' %></td>
                    <td>
                        <form method="post" action="/admin/delete-user/<%= user._id %>" style="display:inline;">
                            <button type="submit" class="danger" onclick="return confirm('Delete user <%= user.username %>?')">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
