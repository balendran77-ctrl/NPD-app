        body { font-family: Arial, sans-serif; background: #f9f9f9; margin: 0; padding: 0; }
        .container { max-width: 500px; margin: 30px auto; background: #fff; padding: 20px; border-radius: 8px; box-shadow: 0 2px 6px rgba(0,0,0,0.07); }
        h2 { text-align: center; }
        input, select { width: 100%; padding: 8px; margin-top: 5px; border-radius: 4px; border: 1px solid #ccc; }
        button { margin-top: 20px; width: 100%; padding: 10px; background: #007bff; color: #fff; border: none; border-radius: 4px; font-size: 1rem; }
        ul { list-style: none; padding: 0; }
        li { margin: 10px 0; }
        a { color: #007bff; text-decoration: none; }
        @media (max-width: 600px) { .container { margin: 10px; padding: 10px; } }
    </style>
    <script>
        function filterProducts() {
            var input = document.getElementById('searchInput').value.toLowerCase();
            var items = document.querySelectorAll('.product-item');
            items.forEach(function(item) {
                var name = item.getAttribute('data-name').toLowerCase();
                if (name.includes(input)) {
                    item.style.display = '';
                } else {
                    item.style.display = 'none';
                }
            });
        }
    </script>
</head>
<body>
    <div class="container">
        <h2>Select Product to Edit Specifications</h2>
        <input type="text" id="searchInput" placeholder="Search by product name..." onkeyup="filterProducts()">
        <ul>
            <% products.forEach(function(product, idx) { %>
                <li class="product-item" data-name="<%= product.productName %>">
                    <strong>Sl. No:</strong> <%= idx + 1 %> - <strong>Name:</strong> <%= product.productName %>
                    <a href="/edit-specifications/<%= product._id %>">Edit</a>
                </li>
            <% }); %>
        </ul>
    <a href="/products">Back to Products</a> |
    <a href="/edit-specifications">Edit Specifications</a>
    </div>
</body>
</html>
